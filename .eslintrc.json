{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "sourceType": "script",
        "ecmaFeatures": {
            "impliedStrict": false
        }
    },
    "rules": {
        "indent": ["error", 4],
        "brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
        "curly": ["error", "multi-or-nest", "consistent"],
        "strict": ["error", "global"],
        "no-buffer-constructor": 2
    },
    "extends": "@hubiinetwork"
}
