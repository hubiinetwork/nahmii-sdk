{
  "name": "striim-sdk",
  "version": "2.0.0",
  "description": "Javascript SDK for using hubii striim APIs",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:docs",
    "build:docs": "npm run build:docs:provider && npm run build:docs:wallet && npm run build:docs:payment && npm run build:docs:receipt && npm run build:docs:monetary-amount && npm run build:docs:utils",
    "build:docs:provider": "jsdoc2md lib/striim-provider.js > Docs/striim-provider.md",
    "build:docs:wallet": "jsdoc2md lib/wallet.js > Docs/wallet.md",
    "build:docs:payment": "jsdoc2md lib/payment.js > Docs/payment.md",
    "build:docs:receipt": "jsdoc2md lib/receipt.js > Docs/receipt.md",
    "build:docs:monetary-amount": "jsdoc2md lib/monetary-amount.js > Docs/monetary-amount.md",
    "build:docs:utils": "jsdoc2md lib/utils.js > Docs/utils.md",
    "test": "nyc mocha lib/**/*.spec.js --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hubiinetwork/striim-sdk.git"
  },
  "keywords": [
    "hubii",
    "striim",
    "sdk",
    "js",
    "blockchain",
    "ethereum",
    "layer2"
  ],
  "author": "Morten Fjeldstad <morten@hubii.com>",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/hubiinetwork/striim-sdk/issues"
  },
  "homepage": "https://github.com/hubiinetwork/striim-sdk#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nock": "^9.6.1",
    "nyc": "^12.0.2",
    "proxyquire": "^2.0.1",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.2.0"
  },
  "dependencies": {
    "ethereumjs-util": "^5.2.0",
    "ethers": "^3.0.26",
    "jsdoc-to-markdown": "^4.0.1",
    "keythereum": "^1.0.4",
    "node-yaml": "^3.1.1",
    "pluck": "0.0.4",
    "superagent": "^3.8.3",
    "web3-utils": "^1.0.0-beta.35",
    "yargs": "^12.0.1"
  }
}
